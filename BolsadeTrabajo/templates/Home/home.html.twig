{% extends 'base.html.twig' %}

{% block title %}Avaible Job offers!!{% endblock %}

{% block body %}
    {% if offers %}
        <h2>{{ 'Job Board World' }}</h2>
        <table class="table table-responsive table-striped">
            <div class="h1">
                <h1>AVAILABLE JOBS OFFERS</h1>
            </div>


            <thead>
            <tr>
                <th>{{ 'OFFERS' }}</th>
                <th>{{ 'COMPANIES'}}</th>
                <th>{{ 'PICK' }}</th>
            </tr>
            </thead>
            <tbody>
            {% for offer in offers %}
                <tr>
                    <td>{{ offer.title }}</td>
                    <td>{{ offer.company }}</td>
                    <td><a href="{{ url('offer_apply', { id: offer.id }) }}">{{ 'Apply'}}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>There are currently no available job offers :</h2>
    {% endif %}
{% endblock %}
